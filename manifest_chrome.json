{
	"manifest_version": 3,
	"name": "Claude Enhanced",
	"version": "2.2.0",
	"description": "Collection of enhancements for Claude.ai",
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://claude.ai/*",
		"https://api.groq.com/*",
		"https://api.elevenlabs.io/*",
		"https://storage.googleapis.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content/claude-styles.js",
				"content/claude-api.js",
				"lib/lz-string.min.js",
				"content/isolated/claude-chat-search.js",
				"content/isolated/claude-navigation.js",
				"content/isolated/claude-pref-switcher.js",
				"content/helpers/stt-providers.js",
				"content/isolated/claude-stt.js",
				"content/isolated/claude-perchat-styles.js",
				"content/isolated/claude-tts.js",
				"content/isolated/claude-exporter.js"
			],
			"run_at": "document_idle"
		},
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content/claude-styles.js",
				"content/claude-api.js",
				"content/main/claude-search-interceptor.js",
				"content/main/claude-phantom-messages.js",
				"content/main/claude-forking.js",
				"content/main/claude-edit-files.js",
				"content/main/pref-switcher-fetch-watcher.js",
				"content/main/perchat-styles-fetch-interceptor.js",
				"content/main/tts-interceptor.js"
			],
			"world": "MAIN",
			"run_at": "document_start"
		}
	],
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"512": "icon512.png",
		"128": "icon128.png"
	},
	"action": {
		"default_icon": "icon128.png",
		"default_title": "Claude Toolbox - Support development"
	}
}