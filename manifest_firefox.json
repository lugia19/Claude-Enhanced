{
	"manifest_version": 3,
	"name": "Claude Toolbox",
	"version": "1.0",
	"description": "Collection of enhancement scripts for Claude.ai",
	"permissions": [
		"scripting",
		"storage"
	],
	"host_permissions": [
		"https://claude.ai/*"
	],
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "claude-toolbox@lugia19.com",
			"strict_min_version": "109.0"
		}
	}
}