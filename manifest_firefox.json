{
	"manifest_version": 3,
	"name": "Claude Toolbox",
	"version": "2.1.1",
	"description": "Collection of enhancements for Claude.ai",
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://claude.ai/*",
		"https://api.groq.com/*",
		"https://api.elevenlabs.io/*",
		"https://api.anthropic.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content/claude-styles.js",
				"content/isolated/claude-pref-switcher.js",
				"content/isolated/claude-stt.js",
				"content/isolated/claude-perchat-styles.js",
				"content/isolated/claude-tts.js"
			],
			"run_at": "document_idle"
		},
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content/claude-styles.js",
				"content/main/claude-phantom-messages.js",
				"content/main/claude-api.js",
				"content/main/claude-exporter.js",
				"content/main/claude-forking.js",
				"content/main/claude-edit-files.js",
				"content/main/pref-switcher-fetch-watcher.js",
				"content/main/perchat-styles-fetch-interceptor.js",
				"content/main/tts-interceptor.js"
			],
			"world": "MAIN",
			"run_at": "document_start"
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "claude-toolbox@lugia19.com",
			"strict_min_version": "128.0"
		}
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"icons": {
		"512": "icon512.png",
		"128": "icon128.png"
	},
	"action": {
		"default_icon": "icon128.png",
		"default_title": "Claude Toolbox - Support development"
	}
}