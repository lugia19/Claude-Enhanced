{
	"manifest_version": 3,
	"name": "Claude Toolbox",
	"version": "2.0",
	"description": "Collection of enhancement scripts for Claude.ai",
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://claude.ai/*",
		"https://api.groq.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content/claude-styles.js",
				"content/isolated/claude-exporter.js",
				"content/isolated/claude-pref-switcher.js",
				"content/isolated/claude-stt.js",
				"content/isolated/claude-perchat-styles.js",
				"content/isolated/claude-tts.js"
			],
			"run_at": "document_idle"
		},
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content/claude-styles.js",
				"content/main/claude-forking.js",
				"content/main/typing-lag-fix.js",
				"content/main/pref-switcher-fetch-watcher.js",
				"content/main/perchat-styles-fetch-interceptor.js",
				"content/main/tts-interceptor.js"
			],
			"world": "MAIN",
			"run_at": "document_start"
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "claude-toolbox@lugia19.com",
			"strict_min_version": "128.0"
		}
	},
	"background": {
		"scripts": [
			"background.js"
		]
	}
}