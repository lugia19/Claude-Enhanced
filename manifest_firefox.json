{
	"manifest_version": 3,
	"name": "Claude Enhanced",
	"version": "2.2.6",
	"description": "Collection of enhancements for Claude.ai",
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://claude.ai/*",
		"https://api.groq.com/*",
		"https://api.elevenlabs.io/*",
		"https://storage.googleapis.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"lib/dexie.min.js",
				"content/helpers/claude-styles.js",
				"content/helpers/claude-api.js",
				"content/helpers/search-utils.js",
				"content/helpers/phantom-storage.js",
				"content/helpers/stt-providers.js",
				"content/helpers/tts-providers.js",
				"content/isolated/global-search.js",
				"content/isolated/chat-search.js",
				"content/isolated/navigation.js",
				"content/isolated/pref-switcher.js",
				"content/isolated/stt.js",
				"content/isolated/perchat-styles.js",
				"content/isolated/tts.js",
				"content/isolated/exporter.js"
			],
			"run_at": "document_idle"
		},
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content/helpers/claude-styles.js",
				"content/helpers/claude-api.js",
				"content/main/phantom-messages.js",
				"content/main/search-interceptor.js",
				"content/main/forking.js",
				"content/main/edit-files.js",
				"content/main/pref-switcher-fetch-watcher.js",
				"content/main/perchat-styles-fetch-interceptor.js",
				"content/main/tts-interceptor.js"
			],
			"world": "MAIN",
			"run_at": "document_start"
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "claude-toolbox@lugia19.com",
			"strict_min_version": "128.0"
		}
	},
	"background": {
		"scripts": [
			"lib/jszip.min.js",
			"background.js"
		]
	},
	"icons": {
		"512": "icon512.png",
		"128": "icon128.png"
	},
	"action": {
		"default_icon": "icon128.png",
		"default_title": "Claude Toolbox - Support development"
	}
}