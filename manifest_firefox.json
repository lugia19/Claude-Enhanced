{
	"manifest_version": 3,
	"name": "Claude Toolbox",
	"version": "1.1",
	"description": "Collection of enhancement scripts for Claude.ai",
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://claude.ai/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"content-bridge.js"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"https://claude.ai/*"
			],
			"js": [
				"userscripts/claude-exporter.user.js",
				"userscripts/claude-typing-replacement.user.js",
				"userscripts/claude-forking.user.js"
			],
			"world": "MAIN",
			"run_at": "document_idle"
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "claude-toolbox@lugia19.com",
			"strict_min_version": "128.0"
		}
	}
}